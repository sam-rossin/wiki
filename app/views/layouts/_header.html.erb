<header class="navbar main-bar">
  <div class="container">
    <%= link_to "Wiki", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Index", pages_path %></li>
        <% if logged_in? %>
          <% if params[:name] %>
            <li><%= link_to "Read", page_path(@page.name, version: params[:version]) %></li>
            <li><%= link_to "Edit", edit_page_path(@page.name, version: params[:version]) %></li>
            <li><%= link_to "History", history_page_path(@page.name) %></li>
          <% end %>
          <li><%= link_to "New", new_page_path %></li>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Create Account", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>